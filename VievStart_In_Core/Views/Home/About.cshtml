@{
    ViewData["Title"] = "About Us - E-Commerce";
    Layout = "~/Views/Shared/_Layout.cshtml"; // This references your layout page
}

<!-- Header Section -->
<section class="about-header text-center py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <h1>About Us</h1>
        <p>Welcome to [Your Brand Name], where quality meets value!</p>
    </div>
</section>

<!-- Brand Story -->
<section class="brand-story py-5">
    <div class="container">
        <h2 class="text-center mb-4">Our Story</h2>
        <p>
            [Your Brand Name] started in [Year] with a passion for [what you sell]. Our founder, [Founder Name], believed in creating a platform that offers not only high-quality products but also exceptional customer service.
            Over the years, we have grown into a community of [number] satisfied customers who trust us for their [product categories] needs.
        </p>
        <p>
            Our journey is all about innovation, quality, and customer satisfaction. We carefully curate our collections to ensure that every item meets our high standards.
        </p>
    </div>
</section>

<!-- Mission and Values -->
<section class="mission-values py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Our Mission & Values</h2>
        <h5>Our Mission:</h5>
        <p>
            To provide the best online shopping experience by delivering quality products at competitive prices, all while ensuring customer satisfaction.
        </p>
        <h5>Our Values:</h5>
        <ul>
            <li>Integrity: We uphold the highest standards of integrity in all of our actions.</li>
            <li>Customer Focus: We strive to exceed our customers' expectations.</li>
            <li>Innovation: We embrace change and seek new ideas.</li>
            <li>Community: We believe in giving back to our community.</li>
        </ul>
    </div>
</section>

<!-- Team Section -->
<section class="team-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Meet Our Team</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/team-member1.jpg" alt="Team Member 1">
                    <div class="card-body text-center">
                        <h5 class="card-title">[Team Member 1 Name]</h5>
                        <p class="card-text">[Position/Role]</p>
                        <p>[Brief Bio]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/team-member2.jpg" alt="Team Member 2">
                    <div class="card-body text-center">
                        <h5 class="card-title">[Team Member 2 Name]</h5>
                        <p class="card-text">[Position/Role]</p>
                        <p>[Brief Bio]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/team-member3.jpg" alt="Team Member 3">
                    <div class="card-body text-center">
                        <h5 class="card-title">[Team Member 3 Name]</h5>
                        <p class="card-text">[Position/Role]</p>
                        <p>[Brief Bio]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Information -->
<section class="contact-info py-5 bg-light">
    <div class="container text-center">
        <h2>Get in Touch</h2>
        <p>If you have any questions or inquiries, feel free to contact us at:</p>
        <p>Email: <a href="mailto:info@yourbrand.com">info@yourbrand.com</a></p>
        <p>Phone: <a href="tel:+1234567890">+1 (234) 567-890</a></p>
    </div>
</section>
