@{
    ViewData["Title"] = "Contact Us - E-Commerce";
    Layout = "~/Views/Shared/_Layout.cshtml"; // This references your layout page
}

<!-- Header Section -->
<section class="contact-header text-center py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We'd love to hear from you!</p>
    </div>
</section>

<!-- Contact Form -->
<section class="contact-form py-5">
    <div class="container">
        <h2 class="text-center mb-4">Get In Touch</h2>
        <form action="/Contact/Send" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</section>

<!-- Contact Information -->
<section class="contact-info py-5 bg-light">
    <div class="container text-center">
        <h2>Contact Information</h2>
        <p>If you prefer to reach out to us directly, you can use the following methods:</p>
        <p>Email: <a href="mailto:info@yourbrand.com">info@yourbrand.com</a></p>
        <p>Phone: <a href="tel:+1234567890">+1 (234) 567-890</a></p>

        <!-- Optional: Add Social Media Links -->
        <h4>Follow Us</h4>
        <a href="https://facebook.com/yourbrand" target="_blank" class="mr-2">Facebook</a>
        <a href="https://twitter.com/yourbrand" target="_blank" class="mr-2">Twitter</a>
        <a href="https://instagram.com/yourbrand" target="_blank">Instagram</a>
    </div>
</section>

<!-- Map Section -->
<section class="map-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Find Us</h2>
        <div class="text-center">
            <!-- Replace the iframe src with your actual Google Maps embed link -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.835434509307!2d144.95373631584373!3d-37.816279579751!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0b3a7a51%3A0xb1cf8993b2aa8ff4!2sYour%20Business%20Name!5e0!3m2!1sen!2sus!4v1623312839165!5m2!1sen!2sus"
                    width="600"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"></iframe>
        </div>
    </div>
</section>
